{{#if error}}
    <div class="alert alert-danger alert-dismissible fade in show" style="text-align:center;">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        {{{content}}}
    </div> 
{{else}}  
    <div class="alert alert-success alert-dismissible fade in show" style="text-align:center;">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        {{{content}}}
    </div> 
{{/if}}


